<% layout('layouts/boilerplate') %>
    
<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-4">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
<form action="/signup" method="post" class="needs-validation" novalidate>
<div class="mb-3">
            <label for="username" class="form-label">Username</label>
        
        <input type="text" name="username" id="username"  class="form-control" required>
        <!--? Valid-feedback=jb shi chiz enter kri jae to jo msg show hota h  -->
        <div class="valid-feedback">
         Looks good
        </div>
        <!--? Valid-feedback=jb glt ya empty chiz enter kri jae to jo msg show hota h  -->
        <div class="invalid-feedback">
            Please enter a  username
        </div>
    </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
        
        <input type="email" name="email" id="email"  class="form-control" required>
        <!--? Valid-feedback=jb shi chiz enter kri jae to jo msg show hota h  -->
        <div class="valid-feedback">
         Looks good
        </div>
        <!--? Valid-feedback=jb glt ya empty chiz enter kri jae to jo msg show hota h  -->
        <div class="invalid-feedback">
            Please enter an email
        </div>
    </div>
<div class="mb-3">
            <label for="password" class="form-label">Password</label>
        
        <input type="password" name="password" id="password"  class="form-control" required>
        <!--? Valid-feedback=jb shi chiz enter kri jae to jo msg show hota h  -->
        <div class="valid-feedback">
         Looks good
        </div>
        <!--? Valid-feedback=jb glt ya empty chiz enter kri jae to jo msg show hota h  -->
        <div class="invalid-feedback">
            Please enter a password
        </div>
    </div>
<button class="btn btn-success mb-3">Signup  </button>
</form>
    </div>
</div>












































